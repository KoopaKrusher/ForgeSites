DATABASE_URL="file:./dev.db"
ADMIN_PASSWORD="set-a-strong-password"

# SMTP settings for quote form email delivery
# Fill these with your SMTP provider details in production.
# For local development, you may omit them; the API will log requests instead of sending email.
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT="587"
SMTP_USER="smtp-user"
SMTP_PASS="smtp-pass"
SMTP_FROM="no-reply@your-domain.com"
# Optional override for recipient (defaults to braden@forge-sites.com)
# SMTP_TO="braden@forge-sites.com"
